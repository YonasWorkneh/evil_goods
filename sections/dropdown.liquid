<div class="dropdown">
  {% for block in section.blocks %}
    <div class="dropdown-item">
      <div class="dropdown-header">
        <div class="dropdown-header-content">
        {{ block.settings.icon }} <!-- Dynamic SVG Icon -->
        <h3>{{ block.settings.title }}</h3>
        </div>
        <button class="dropdown-icon">
          +
        </button>
      </div>
      <div class="dropdown-content hidden" data-src="{{ block.settings.title }}">
        <p>{{ block.settings.content }}</p>
      </div>
    </div>
  {% endfor %}
</div>

<style>
.dropdown{
    padding: 10px 20px;
}
.dropdown-item{
    {% comment %} border: 1px solid #ddd; {% endcomment %}
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.11);
    margin-bottom: 10px;
    padding: 0px 10px;
}
.dropdown-header{
    display: flex;
    align-items: center;
    justify-content: space-between;
    text-transform: capitalize;
    font-size: 13px;
}
.hidden{
    display: none;
}
  .dropdown-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background: rgba(255, 229, 53, 1);
    border: none;
    cursor: pointer;
    font-size: 20px;
    font-weight: 700;
  }
  .dropdown-header-content{
    display: flex;
    align-items: center;
    gap: 10px;
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const toggleButtons = document.querySelectorAll('.dropdown-icon');
  console.log(toggleButtons);
  toggleButtons.forEach(button => {
    button.addEventListener('click', (e) => {
      console.log(e);
      const dropdownItem = button.closest('.dropdown-item');
      const content = dropdownItem.querySelector('.dropdown-content');  
      const contents = document.querySelectorAll('.dropdown-content');
      contents.forEach(content => {
        if(content.dataset.src !== button.dataset.src){
          content.classList.add('hidden');
        }
      });
      content.classList.toggle('hidden'); 
      button.textContent = content.classList.contains("hidden")? '-' : '+';
    });
  });
  
  // Close dropdowns when clicking outside
  document.addEventListener('click', (e) => {
    if (!e.target.closest('.dropdown-item')) {  
      document.querySelectorAll('.dropdown-content').forEach(content => {
        content.classList.add('hidden');
      });
      document.querySelectorAll('.dropdown-icon').forEach(button => {
        button.textContent = '+';   
      });
    }
  });
});
</script>

