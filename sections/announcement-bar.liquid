{% schema %}
{
  "name": "Announcement bar",
  "settings": [
    {
      "type": "text",
      "id": "message",
      "default": "FREE SHIPPING ON ORDERS OVER",
      "label": "Message"
    },
    {
      "type": "number",
      "id": "threshold_amount",
      "default": 50,
      "label": "Threshold Amount ($)"
    }
  ],
  "presets": [
    {
      "name": "Announcement bar"
    }
  ]
}
{% endschema %}

<div class="announcement-bar">
  <div class="announcement-bar__container">
    <div class="announcement-bar__content">
      <svg class="announcement-bar__icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M20 8H17V4H3C1.9 4 1 4.9 1 6V17H3C3 18.66 4.34 20 6 20C7.66 20 9 18.66 9 17H15C15 18.66 16.34 20 18 20C19.66 20 21 18.66 21 17H23V12L20 8ZM6 18C5.45 18 5 17.55 5 17C5 16.45 5.45 16 6 16C6.55 16 7 16.45 7 17C7 17.55 6.55 18 6 18ZM18 18C17.45 18 17 17.55 17 17C17 16.45 17.45 16 18 16C18.55 16 19 16.45 19 17C19 17.55 18.55 18 18 18ZM17 12V9.5H19.47L21 12H17Z" fill="currentColor"/>
      </svg>
      <p class="announcement-bar__message">{{ section.settings.message }} ${{ section.settings.threshold_amount }}+</p>
    </div>
  </div>
</div>

{% stylesheet %}
.announcement-bar {
  background: rgba(255, 229, 53, 1);
  padding: 0.5rem 0;
  font-size: 2rem;
}

.announcement-bar__container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}

.announcement-bar__content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  font-size: 1.5rem;
}

.announcement-bar__icon {
  color: #000000;
}

.announcement-bar__message {
  margin: 0;
  font-size: 1.5rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: #000000;
}

@media screen and (max-width: 768px) {
  .announcement-bar__message {
    font-size: 1.25rrem;
  }
}
{% endstylesheet %} 