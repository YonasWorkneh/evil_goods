        {
          "type": "video_url",
          "id": "video",
          "label": "Video URL",
          "accept": ["youtube", "vimeo"]
        },
        {
          "type": "image_picker",
          "id": "cover_image",
          "label": "Cover Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Video Title",
          "default": "Video Title"
        },
        {
          "type": "text",
          "id": "duration",
