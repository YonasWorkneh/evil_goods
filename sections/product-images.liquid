{% schema %}
{
  "name": "Product Images",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Additional Image 1",
      "info": "Recommended size: 400x400px"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Additional Image 2",
      "info": "Recommended size: 400x400px"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Additional Image 3",
      "info": "Recommended size: 400x400px"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "Additional Image 4",
      "info": "Recommended size: 400x400px"
    },
    {
      "type": "image_picker",
      "id": "image_5",
      "label": "Additional Image 5",
      "info": "Recommended size: 400x400px"
    }
  ]
}
{% endschema %}

<div class="product-images">
  <div class="product-images__grid">
    {% for i in (1..5) %}
      {% assign image_key = 'image_' | append: i %}
      {% assign image = section.settings[image_key] %}
      <div class="product-images__item">
        <img 
          src="{{ image | default: 'img' | append: i | append: '.png' | asset_url }}"
          alt="Additional product image {{ i }}"
          class="product-images__img"
          loading="lazy"
        >
      </div>
    {% endfor %}
  </div>
</div>

{% stylesheet %}
.product-images {
  padding: 2rem 0;
  background: #FFFFFF;
}

.product-images__grid {
  padding: 0 1rem;
  display: flex;
  justify-content: space-between;
  gap: 1rem;
}
.product-images__item{
    width:200px;
    height:100px;
}


.product-images__item:hover {
  transform: translateY(-5px);
}

.product-images__img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  transition: transform 0.3s ease;
}

.product-images__item:hover .product-images__img {
  transform: scale(1.05);
}

{% endstylesheet %} 
